<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/date_pager_background</item>
        <item name="titleTextColor">@color/text_light</item>
    </style>
    
    <style name="Toolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:textColorSecondary">@color/text_light</item>
    </style>

    <style name="Text1" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDialogTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextDark" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="UnitsText" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_units</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/menu_item_light</item>
    </style>

</resources>
